-- for sv_indexes
CREATE TABLE IF NOT EXISTS `sv_indexes` (
  `datasource_id` int(11) NOT NULL,
  `project_name` varchar(100) CHARACTER SET utf8 NOT NULL,
  `project_url` varchar(200) CHARACTER SET utf8 DEFAULT NULL,
  `project_html` mediumtext CHARACTER SET utf8,
  `last_updated` datetime NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

